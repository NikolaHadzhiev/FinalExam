<link href="~/css/site.css" rel="stylesheet" />
@model IEnumerable<Data.Models.UserViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-action="Index" asp-controller="Home" class=" nav-link">List</a>
            </li>
            <li class="nav-item">
                <a asp-action="Privacy" asp-controller="Home" class="nav-link">Privacy</a>
            </li>
            <li class="dropdown-item">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>


                <ul class="dropdown-menu">
                    <li><a asp-action="Privacy" asp-controller="Home">Mission</a></li>
                    <li><a href="#">Vision</a></li>
                    <li><a href="#">Products</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div class="card-deck">
        @foreach (var user in Model)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
                <div class="card-header">
                    <h3>@user.Username</h3>
                </div>
                <img class="card-img-top" src="~/images/unnamed.jpg" />
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary">View</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    </div>
    
</div>