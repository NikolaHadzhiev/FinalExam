@model ProjectRole

@{
    ViewData["Title"] = "Project Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Registration</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Create" asp-controller="Admin">
            <h4>Use a local account to log in.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.RoleName"></label>
                <input asp-for="@Model.RoleName" class="form-control" />
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>