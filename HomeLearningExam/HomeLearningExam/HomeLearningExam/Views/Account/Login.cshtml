@model LoginViewModel
@inject SignInManager<ApplicationUser> signInManager

@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page">
    @if (this.signInManager.IsSignedIn(User))
    {
        <div class="custom-form">
            <p class="message">You are already signed in. <a asp-controller="Account" asp-action="Logout">Sign out instead?</a></p>
        </div>
    }
    else
    {
        <div class="form">
            <form class="login-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="@Model.Username" placeholder="Username" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Password" placeholder="Password" />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <p class="message">Not registered? <a asp-controller="Account" asp-action="Register">Create an account</a></p>
            </form>
        </div>
    }

</div>